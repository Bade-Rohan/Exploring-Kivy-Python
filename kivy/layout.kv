#BoxLayoutExample:
#GridLayoutExample:
TextInputExample:

<TextInputExample>:
    search_input : search_box
    orientation: "vertical"
    BoxLayout:
        height: "40dp" 
        size_hint_y: None
        TextInput:
            id: search_box
            size_hint_x: 75
        Button:
            text: "Search"
            color:0,1,1,1
            font_size: "20dp"
            size_hint_x: 25 
            on_press: root.search_location()
        Button:
            font_size: "20dp"
            text: "Remarks"
            on_press: root.show_remarks()
            size_hint_x: 25
    Label:
        text: "Here you will see the outputs of your search"
